<div class="row">
  <div class="carousel carousel-slider">
    <% @cards.each do |card| %>
      <a class="carousel-item" >
        <div class="col s12 center">
          <div class="col l4"></div>
          <div class='col l4'>
            <div class="card sticky-action">
              <div class="card-image waves-effect waves-block waves-light">
                <div class="activator"><%= image_tag(card.image.url, alt: 'Image',:width => 200, :height => 300) if card.image? %></div>
              </div>
              <div class="card-content">
                <span class="card-title activator grey-text text-darken-4"><%= card.front %><i class="material-icons right">more_vert</i></span>
              </div>
              <div class="card-reveal">
                <span class="card-title grey-text text-darken-4"><%= card.back %><i class="material-icons right">close</i></span>
                <div class="card-action">
                  <%= form_for(card, url: change_status_deck_card_path(card, deck_id: card.deck.id), method: :put) do |f| %>
                    <div class="col s12">
                      <%= f.button 'Wrong 1 min', class: 'btn waves-effect waves-light btn-block red' %>
                    </div>
                    <div class="col s12">
                      <%= f.button 'Good 10 min', class: 'btn waves-effect waves-light btn-block green' %>
                    </div>
                    <div class="col s12">
                      <%= f.button 'Exelent 30 min', class: 'btn waves-effect waves-light btn-block blue' %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <div class="col l4"></div>
        </div>
      </a>
    <% end %>
  </div>
</div>
