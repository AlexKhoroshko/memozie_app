<p id="notice"><%= notice %></p>

<h1>Decks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Cards</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @decks.each do |deck| %>
      <tr>
        <td><%=deck.title%></td>
        <td><%= deck.description %></td>
        <td><%= deck.cards.count%></td>
        <td><%= link_to 'Review', review_deck_path(deck) %></td>
        <td><%= link_to 'Cards List', deck_cards_path(deck) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
